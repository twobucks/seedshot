<html>
  <head>
    <title>Zapsnap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/public/reset.css" rel="stylesheet"></link>
    <link href="/public/main.css" rel="stylesheet"></link>
  </head>
  <body>
    <div class='container image'>
      {{#if infoHash}}
        <div class="spinner" id="spinner">
          <div class="rect1"></div>
          <div class="rect2"></div>
          <div class="rect3"></div>
          <div class="rect4"></div>
          <div class="rect5"></div>
        </div>
        <img id="downloaded" data-info-hash="{{infoHash}}"/>
      {{else}}
        <img id="seeded" src="data:image/jpeg;base64,{{base64}}"/>
      {{/if}}
      <p class='status'></p>
    </div>

    <footer>
      <a href="https://twobucks.co">Two Bucks</a> Â© 2017
    </footer>

  </body>

  <script type='text/javascript' src={{bundlePath}}></script>
</html>
